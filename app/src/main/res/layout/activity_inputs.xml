<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inputsBackground"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputsActivity">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/ImgInputs"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ligth"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="top"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/UserI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/gotham"
            android:textColor="@color/Light"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="2dp"
            android:background="#deff00" />

    </LinearLayout>
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="394dp"
        android:layout_marginTop="250dp"
        android:paddingBottom="50dp"
        android:paddingRight="50dp"
        android:foregroundGravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        card_view:cardBackgroundColor="@color/textInputLayout"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true"
        card_view:contentPadding="3dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="187dp">




            <ScrollView
                android:layout_width="414dp"
                android:layout_height="400dp"
                android:layout_margin="30dp"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:id="@+id/inputs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginRight="100dp"
                    android:layout_marginBottom="100dp"
                    tools:layout_editor_absoluteX="166dp"
                    tools:layout_editor_absoluteY="200dp"></LinearLayout>
            </ScrollView>







    </androidx.cardview.widget.CardView>

           <Button
               android:id="@+id/enrg"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@drawable/submit"
               android:textColor="#043e61"
               android:fontFamily="@font/calibri"
               android:text="Enregistrer" />

       </LinearLayout>

</FrameLayout>